%o A275968 (Python)
%o A275968 import sympy
%o A275968 def lcs(n):
%o A275968     a=1
%o A275968     while n>1:
%o A275968         if n%2==0:
%o A275968             n=n//2
%o A275968         else:
%o A275968             n=(3*n)+1
%o A275968         a=a+1
%o A275968     return(a)
%o A275968 m=2
%o A275968 while m>0:
%o A275968     n=sympy.nextprime(m)
%o A275968     if lcs(m)==lcs(n):
%o A275968         print(m,)
%o A275968     m=n
