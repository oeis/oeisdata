%o A088643 a088643_row n = n : f n [n-1, n-2 .. 1] where
%o A088643    f u vs = g vs where
%o A088643      g []                            = []
%o A088643      g (x:xs) | a010051 (x + u) == 1 = x : f x (delete x vs)
%o A088643               | otherwise            = g xs
