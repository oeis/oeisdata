%o A115023 (PARI)
%o A115023 partial_sums(v) = {my(w=vector(#v)); w[1]=v[1]; for(i=2, #v, w[i]=w[i-1]+v[i]); w}
%o A115023 a115023(size) = {p=partial_sums(vector(size, k, k--; 1/bernfrac(2*k))); vector(size, k, numerator(p[k]))}
