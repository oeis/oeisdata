%t A283942 s[0] = 1; s[n_] := s[n] = s[n - 1] + 1 + Floor[n*r];
%t A283942 u = Table[n + 1 + Sum[Floor[(n - k)/r], {k, 0, n}], {n, 0, z}] (* A022794 , col 1 of A283942 *)
