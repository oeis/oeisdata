%o A283322 (Python)
%o A283322 import math
%o A283322 f=math.factorial
%o A283322 def C(n,r): return f(n)/f(r)/f(n - r)
%o A283322 def T(n,k):
%o A283322     if k==n: return f(n)/2
%o A283322     elif k==n-1: return n**2 * f(n - 1) / 2
%o A283322     else: return C(n, k)**2 * f(k)
