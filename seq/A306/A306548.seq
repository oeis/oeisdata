%t A306548 f[m_, s_] := Piecewise[{{s^m, s >= 0}, {0, True}}];
%t A306548 F[n_, m_] := Sum[f[m, n - k]*f[m, k], {k, -Infinity, +Infinity}];
%t A306548 T[n_, k_] := F[n - k, k];
