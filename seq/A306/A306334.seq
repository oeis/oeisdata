%o A306334 from numpy import array as npa
%o A306334 from numpy.linalg import matrix_power as npow
%o A306334 def F(n):
%o A306334      if n<4: return([0,1,3,4][n])
%o A306334      m=npa([[0,0,1],[0,1,1],[1,1,1]],dtype=object)
