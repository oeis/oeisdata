%t A035312 (* Assuming n <= t(n,1) <= 3n *) rows = 11; uniqueQ[t1_, n_] := (t[n, 1] = t1; Do[t[n, k] = t[n, k-1] + t[n-1, k-1], {k, 2, n}]; n*(n+1)/2 == Length[ Union[ Flatten[ Table[ t[m, k], {m, 1, n}, {k, 1, m}]]]]); t[n_ , 1] := t[n, 1] = Select[ Complement[ Range[n, 3n], Flatten[ Table[ t[m, k], {m, 1, n-1}, {k, 1, m}]]], uniqueQ[#, n]& , 1][[1]]; Flatten[ Table[ t[n, k], {n, 1, rows}, {k, 1, n}]] (* _Jean-FranÃ§ois Alcover_, Dec 02 2011 *)
