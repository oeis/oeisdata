%t A390813 Table[k=0;While[Or@@((r=#;f=Flatten[Table[r[[a]]^2+r[[b]]^2,{b,Length@r},{a,b}],1];DuplicateFreeQ@f)&/@Subsets[Range@n,{n-k}])==False,k++];n-k,{n,18}]
%o A390813 (Python)
%o A390813 def a(n):
%o A390813     def recurse(k, b, w):
%o A390813         if k > n: return 0
%o A390813         s = recurse(k+1, b, w)
%o A390813         b += (1<<(k**2))
%o A390813         if not w & (b<<(k**2)): s = max(s, 1+recurse(k+1, b, w+(b<<(k**2))))
%o A390813         return s
%o A390813     return recurse(1, 0, 0)
