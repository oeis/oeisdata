%o A390583 (PARI) my(r1, r2, r3, r4, a, b, c, t); for(r1=1, 100, for(r2=r1+1, ceil(r1/(2/sqrt(3)-1)), a=1/r1; b=1/r2; for(r3=r2, floor(4*(a+b)/(a-b)^2), a=r2*r3; b=r1*r3; c=r1*r2; t=a*b+a*c+b*c; if(!issquare(t), next); t=a+b+c-2*sqrtint(t); if(t<=0, next); r4=r1*r2*r3/t; if(type(r4)!="t_INT" || gcd([r1, r2, r3, r4])>1, next); print([r1, r2, r3, r4]))))
