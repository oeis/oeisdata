%t A390432 stc[n_]:=Differences[Prepend[Join @@ Position[Reverse[IntegerDigits[n,2]],1],0]]//Reverse;
%t A390432 firsums[c_]:=Table[c[[i]]+c[[i+1]],{i,Length[c]-1}];
%t A390432 Table[firsums[stc[n]],{n,0,100}]
