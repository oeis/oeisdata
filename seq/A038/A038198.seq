%t A038198 ok[n_] := Reduce[k>0 && n^2 + 7 == 2^k, k, Integers] =!= False; Select[Range[1000], ok] (* _Jean-Fran√ßois Alcover_, Sep 21 2011 *)
%t A038198 Select[Range[190],With[{c=#^2+7},IntegerExponent[c,2]==Log2[c]]&] (* _Harvey P. Dale_, Sep 15 2025 *)
