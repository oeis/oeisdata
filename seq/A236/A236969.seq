%t A236969 okQ[n_] := Block[{x,y,r}, r = Reduce[x+y == 1 && x*y == 1 , {x,y}, Modulus -> n]; r =!= False && Or @@ ((1 == PowerMod[#[[1]], #[[2]], n]) & /@ ({x,y} /. List@ ToRules@ r))]; Select[Prime@Range@300, okQ] (* _Giovanni Resta_, Feb 03 2014 *)
