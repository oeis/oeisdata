%o A210570 (PARI) ev(v)=my(h=sum(i=1, #v, v[i]), m, u); if(h<2, return(h)); m=#v; while(v[m]==0, m--); u=vector(m-1, i, v[i]); h=ev(u); for(k=1, sqrtint(m-1), u[m-k^2]=0); max(h, 1+ev(u))
%o A210570 a(n)=my(k=(5*n-3)\2, t); while(1, t=ev(vector(k, i, 1)); if(t==n, return(k)); k+=n-t)
%o A210570 (Python)
%o A210570 from itertools import count, islice
%o A210570 from sympy.ntheory.primetest import is_square
%o A210570 from networkx import empty_graph, find_cliques
%o A210570 def A210570_gen(): # generator of terms
%o A210570     c, G = 0, empty_graph([])
%o A210570     for n in count(1):
%o A210570         G.add_node(n)
%o A210570         G.add_edges_from((a,n) for a in G if a!=n and not is_square(n-a))
%o A210570         if (m:=max(len(c) for c in find_cliques(G,nodes=[n])))>c:
%o A210570             yield n
%o A210570             c = m
%o A210570 A210570_list = list(islice(A210570_gen(),20)) # _Chai Wah Wu_, Jan 11 2026
