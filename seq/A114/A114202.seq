%o A114202 (Python)
%o A114202 from math import comb
%o A114202 def A114202_table(size: int) -> list[list[int]]:
%o A114202     table = []
%o A114202     for n in range(0, size):
%o A114202         row = []
%o A114202         for k in range(0, n + 1):
%o A114202             s = sum(comb(n - k, j) * comb(k, j) * (((2<<j) + 1)//3) for j in range(0, n - k + 1))
%o A114202             row.append(s)
%o A114202         table.append(row)
%o A114202     return table
%o A114202 print(A114202_table(10))  # _Peter Luschny_, Dec 28 2025
