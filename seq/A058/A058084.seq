%p A058084 # Alternative:
%p A058084 A058084list:=proc(N) # To get the terms a(1) to a(N)
%p A058084     local count, m, k, v, V;
%p A058084     V:=Vector(N);
%p A058084     count:=0;
%p A058084     for m while count<N do
%p A058084         for k from 0 to m/2 do
%p A058084             v:=binomial(m, k);
%p A058084             if v>N then
%p A058084                 break
%p A058084             elif V[v]=0 then
%p A058084                 V[v]:=m;
%p A058084                 count:=count+1
%p A058084             fi
%p A058084         od
%p A058084     od;
%p A058084     V[1]:=0;
%p A058084     return op(convert(V, list));
%p A058084 end proc;
