%H A006885 <a href="/index/3#3x1">Index entries for sequences related to 3x+1 (or Collatz) problem</a>
%p A006885 b:= proc(n) option remember; `if`(n=1, 1,
%p A006885       max(n, b(`if`(n::even, n/2, 3*n+1))))
%p A006885     end:
%p A006885 g:= proc(n) option remember; local k,t;
%p A006885       k:=g(n-1); t:= b(k);
%p A006885       do k:=k+1; if b(k)>t then break fi od; k
%p A006885     end: g(1):=1:
%p A006885 a:= n-> b(g(n)):
%p A006885 seq(a(n), n=1..30);  # _Alois P. Heinz_, Jan 14 2026
%t A006885 mcoll[n_]:=Max@@NestWhileList[If[EvenQ[#],#/2,3#+1]&,n,#>=n&]; t={1,max=2}; Do[If[(y=mcoll[n])>max,AppendTo[t,max=y]],{n,3,10^6,4}]; t (* _Jayanta Basu_, May 28 2013 *)
