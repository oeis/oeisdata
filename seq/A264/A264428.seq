%o A264428 bell_matrix(f, len) = { my( m = matrix(len, len) );  m[1, 1] = 1;
%o A264428   for( n = 1, len-1, m[n+1, 2] = f(n-1) );
%o A264428   for( n = 0, len-1, for( k = 1, n,
%o A264428      m[n+1, k+1] = sum(j = 1, n-k+1, binomial(n-1,j-1)*m[n-j+1,k]*m[j+1,2]) ));
%o A264428   return( m )
%o A264428 }
