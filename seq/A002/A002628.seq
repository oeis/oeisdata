%t A002628 d[0] = 1; d[n_] := d[n] = n d[n - 1] + (-1)^n;
%t A002628 T[n_, k_] := If[n == 0 && k == 0, 1, If[k <= n/2, Binomial[n - k, k] d[n + 1 - k]/(n - k), 0]];
%t A002628 a[n_] := Sum[T[n, k], {k, 0, Quotient[n, 2]}];
