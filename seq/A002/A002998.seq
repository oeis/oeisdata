%p A002998 read("transforms") :
%p A002998 A002998 := proc(n)
%p A002998     local k,a;
%p A002998     for k from 1 do
%p A002998         a := k*n ;
%p A002998         if digsum(a) = n then
%p A002998             return a;
%p A002998         end if;
%p A002998     end do:
%p A002998 end proc:
%p A002998 seq(A002998(n),n=0..50) ; # _R. J. Mathar_, Sep 14 2025
%t A002998 Flatten[Table[Select[n Range[100000], Total[IntegerDigits[#]] == n&, 1], {n,0,50}]] (* _Harvey P. Dale_, Oct 30 2011 *)
