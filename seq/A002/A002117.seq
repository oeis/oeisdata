%p A002117 # Calculates an approximation with n exact decimal places (small deviation
%p A002117 # in the last digits are possible). Goes back to ideas of A. A. Markoff 1890.
%p A002117 zeta3 := proc(n) local s, w, v, k; s := 0; w := -1; v := 4;
%p A002117 for k from 2 by 2 to 7*n/2 do
%p A002117     w := -w*v/k;
%p A002117     v := v + 8;
%p A002117     s := s + 1/(w*k^3);
%p A002117 od; 20*s; evalf(%, n) end:
%p A002117 zeta3(10000); # _Peter Luschny_, Jun 10 2020
%t A002117 RealDigits[ N[ Zeta[3], 100] ] [ [1] ]
