%p A079641 BellMatrix(n -> add((-1)^(n-k)*2^k*k!*combinat:-stirling2(n, k), k=0..n), 9); # _Peter Luschny_, Jan 26 2016
%t A079641 rows = 10;
%t A079641 t = Table[Sum[(-1)^(n-k)*2^k*k!*StirlingS2[n, k], {k,0,n}], {n, 0, rows}];
%t A079641 T[n_, k_] := BellY[n, k, t];
