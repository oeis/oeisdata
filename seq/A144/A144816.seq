%p A144816 # Function T(n,k) defined in A144815.
%p A144816 seq(seq(denom(T(n,k)), k=0..n), n=0..10);
%t A144816 row[n_] := Module[{f, a, eq}, f = Function[x, Sum[a[2*k+1]*x^(2*k+1), {k, 0, n}]]; eq = Table[Derivative[k][f][1] == If[k == 0, 1, 0], {k, 0, n}]; Table[a[2*k+1], {k, 0, n}] /. Solve[eq] // First]; Table[row[n] // Denominator, {n, 0, 10}] // Flatten (* _Jean-Fran√ßois Alcover_, Feb 03 2014 *)
