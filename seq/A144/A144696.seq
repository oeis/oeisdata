%p A144696 seq(T(n,k),k = 0..n-2)
%p A144696 end do;
%t A144696 T[n_, k_]:= 1/2!*Sum[(-1)^(k-j)*Binomial[n+1, k-j]*(j+1)^(n-1)*(j+2), {j, 0, k}];
