%o A332542 def A(n)
%o A332542   s = n
%o A332542   t = n + 1
%o A332542   while s % t > 0
%o A332542     s += t
%o A332542     t += 1
%o A332542   end
%o A332542   t - n - 1
%o A332542 end
%o A332542 def A332542(n)
