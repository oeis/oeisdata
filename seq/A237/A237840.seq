%t A237840 tw[0]:=0
%t A237840 tw[n_]:=tw[n-1]+If[PrimeQ[Prime[n]+2],1,0]
%t A237840 SQ[n_]:=IntegerQ[Sqrt[tw[PrimePi[n]]]]
%t A237840 a[n_]:=Sum[If[SQ[k*n-2],1,0],{k,1,n}]
%t A237840 Table[a[n],{n,1,80}]
