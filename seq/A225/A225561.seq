%o A225561 (Python)
%o A225561 from sympy import divisors
%o A225561 def A225561(n):
%o A225561     c = {0}
%o A225561     for d in divisors(n,generator=True):
%o A225561         c |=  {a+d for a in c}
%o A225561     k = 1
%o A225561     while k in c:
%o A225561         k += 1
%o A225561     return k-1 # _Chai Wah Wu_, Jul 05 2023
