%t A225502 lm[n_]:=Module[{m=1,p=Prime[n]},While[!OddQ[Sqrt[8(p (m(m+1))/2)+1]], m++];m]; Array[lm,68] (* _Harvey P. Dale_, Mar 16 2018 *)
%o A225502 (C)
%o A225502 #include <stdio.h>
%o A225502 #define TOP 300
%o A225502 typedef unsigned long long U64;
%o A225502 U64 isTriangular(U64 a) {
%o A225502     U64 sr = 1ULL<<32, s, b, t;
%o A225502     if (a < (sr/2)*(sr+1))  sr>>=1;
%o A225502     while (a < sr*(sr+1)/2)  sr>>=1;
%o A225502     for (b = sr>>1; b; b>>=1) {
%o A225502         s = sr+b;
%o A225502         if (s&1) t = s*((s+1)/2);
%o A225502         else     t = (s/2)*(s+1);
%o A225502         if (t >= s && a >= t)  sr = s;
%o A225502     }
%o A225502     return (sr*(sr+1)/2 == a);
%o A225502 }
%o A225502 int main() {
%o A225502   U64 i, j, k, m, tm, p, pp = 1, primes[TOP];
%o A225502   for (primes[0]=2, i = 3; pp < TOP; i+=2) {
%o A225502     for (p = 1; p < pp; ++p) if (i%primes[p]==0) break;
%o A225502     if (p==pp) {
%o A225502         primes[pp++] = i;
%o A225502         for (j=p=primes[pp-2], m=tm=1; ; j=k, m++, tm+=m) {
%o A225502            if ((k = p*tm) < j) { m=0; break; }
%o A225502            if (isTriangular(k)) break;
%o A225502         }
%o A225502         printf("%llu, ", m);
%o A225502     }
%o A225502   }
%o A225502   return 0;
%o A225502 }
%o A225502 (Python)
%o A225502 from sympy.ntheory.primetest import is_square
%o A225502 from sympy.solvers.diophantine.diophantine import diop_DN
%o A225502 from sympy import prime
%o A225502 def A225502(n):
%o A225502     p = prime(n)
%o A225502     c, a, b = None, diop_DN(p,1-p), diop_DN(p,1)
%o A225502     while c is None:
%o A225502         a2 = []
%o A225502         for r, s in a:
%o A225502             if (sa:=abs(s))>1 and sa&1:
%o A225502                 c = min(c,sa) if c is not None else sa
%o A225502             for t, u in b:
%o A225502                 w, d = r*u+s*t, r*t+s*u*p
%o A225502                 if (wa:=abs(w))>1 and wa&1:
%o A225502                     c = min(c,wa) if c is not None else wa
%o A225502                 a2.extend([(d,w),(d,-w),(-d,w),(-d,-w)])
%o A225502         a.extend(a2)
%o A225502     return c-1>>1 # _Chai Wah Wu_, Oct 11 2025
