%e A071032   1,1,1,1,1,1,0,0,1,1,1,1,0,1,1;
%e A071032   ...
%t A071032 A071032list[rowmax_]:=MapIndexed[ArrayPad[#1,#2-rowmax-1]&,CellularAutomaton[86,{{1},0},rowmax]];A071032list[10] (* Generates 11 rows *) (* _Paolo Xausa_, Jun 01 2023 *)
