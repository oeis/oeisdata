%o A005132    recaman :: Set Integer -> Integer -> Integer -> [Integer]
%o A005132    recaman s n x = if x > n && (x - n) `notMember` s
%o A005132                       then (x-n) : recaman (insert (x-n) s) (n+1) (x-n)
%o A005132                       else (x+n) : recaman (insert (x+n) s) (n+1) (x+n)
