%o A005132 (Python)
%o A005132 def recaman(n):
%o A005132   seq = []
%o A005132   for i in range(n):
%o A005132     if(i == 0): x = 0
%o A005132     else: x = seq[i-1]-i
%o A005132     if(x>=0 and x not in seq): seq+=[x]
%o A005132     else: seq+=[seq[i-1]+i]
%o A005132   return seq
