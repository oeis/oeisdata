%t A391068 (*Prints T(n,k) as triangle*)
%t A391068 T1[t_,n_, k_] := Sum[(-1)^j*Binomial[k, j]*(t - j)^n, {j, 0, k}];Table[T1[2, n, k], {n, 0, 10}, {k, 0, n}] // Flatten
%t A391068 (*Validates T(n,k) in Stirling form*)
%t A391068 T2[t_, n_, k_] := Sum[Binomial[t - k, j - k]*StirlingS2[n, j]*j!, {j, k, n}];Table[T2[2, n, k], {n, 0, 10}, {k, 0, n}] // Flatten
%t A391068 (*Validates T(n,k) in Eulerian form*)
%t A391068 Eulerian[n_, k_] := Sum[(-1)^s*Binomial[n + 1, s]*(k + 1 - s)^n, {s, 0, k}];
%t A391068 T3[t_, n_, k_] := Sum[Eulerian[n, j]*Binomial[t + j - k, n - k], {j, 0, n}];Table[T3[2, n, k], {n, 0, 10}, {k, 0, n}] // Flatten
