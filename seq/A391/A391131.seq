%N A391131 Areas of Pythagorean triangles that are sums of two or more consecutive primes.
%H A391131 Robert Israel, <a href="/A391131/b391131.txt">Table of n, a(n) for n = 1..2000</a>
%e A391131 a(3) = 60 is a term because 60 = (15*8)/2 is the area of the Pythagorean triangle with sides 8, 15, 17, and 60 = 29 + 31 is the sum of two consecutive primes.
%p A391131 N:= 5000: # to get all entries <= N
%p A391131 A:= {}:
%p A391131 for t from 1 to floor(sqrt(2*N)) do
%p A391131    F:= select(f -> f[2]::odd, ifactors(2*t)[2]);
%p A391131    d:= mul(f[1], f=F);
%p A391131    for e from ceil(sqrt(t/d)) do
%p A391131      s:= d*e^2;
%p A391131      r:= sqrt(2*t*s);
%p A391131      a:= (r+s)*(r+t)/2;
%p A391131      if a > N then break fi;
%p A391131      A:= A union {a};
%p A391131    od
%p A391131 od:
%p A391131 P:= select(isprime,[2,seq(i,i=3..N/2,2)]):
%p A391131 SP:= ListTools:-PartialSums([0,op(P),nextprime(P[-1])]):
%p A391131 C:= {}:
%p A391131 for i from 1 to nops(SP)-2 do
%p A391131    for j from i+2 to nops(SP) do
%p A391131         x:= SP[j]-SP[i];
%p A391131         if x > N then break fi;
%p A391131         if member(x,A) then C:= C union {x} fi;
%p A391131 od od:
%p A391131 sort(convert(C,list));
