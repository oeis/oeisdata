%p A077011 seq(T(n), n=1..10);  # _Alois P. Heinz_, Jun 04 2012
%t A077011 T[n_] := Module[{t = Product[Prime[i], {i, 1, n}]}, Table[t/Prime[n - i], {i, 0, n - 1}]];
