%o A057062 a057062 n = a057062_list !! (n-1)
%o A057062 a057062_list = f 1 [1..] where
%o A057062    f j xs = (replicate (sum $ map a010051 dia) j) ++ f (j + 1) xs'
%o A057062      where (dia, xs') = splitAt j xs
