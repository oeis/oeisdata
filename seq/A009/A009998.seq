%p A009998 E := (n,x) -> `if`(n=0,1,x*(1-x)*diff(E(n-1,x),x)+E(n-1,x)*(1+(n-1)*x));
%p A009998 G := (n,x) -> E(n,x)/(1-x)^(n+1);
%p A009998 A009998 := (n,k) -> coeff(series(G(n-k,x),x,18),x,k);
