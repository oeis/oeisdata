%p A347681 myfun1 := proc(A,B) local Ar,Br;
%p A347681 if igcd(A,B) > 1 then return(0); fi;
%p A347681   Ar:=(A)^(-1) mod B;
%p A347681    if 2*Ar > B then Ar:=B-Ar; fi;
