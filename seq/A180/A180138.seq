%t A180138 t[b_, e_] := Block[{k = 1, hnp = b^e/2}, While[ h = k*hnp; PrimeQ@h || NextPrime[h, -1] + NextPrime@h != 2 h, k++ ]; k]; Table[ t[b - e, e], {b, 2, 14}, {e, 0, b - 2}] // Flatten
%t A180138 (* to find twins other than 2&3 *) gQ[b_, e_, k_] := Block[{h = k*b^e/2}, NextPrime@h - NextPrime[h, -1] < 3 ]; Do[ If[ gQ[b - e, e, k], Print[{b - e, e}]], {b, 2, 143}, {e, 0, b - 2}]
%o A180138 (Python)
%o A180138 from sympy import isprime, nextprime, prevprime
%o A180138 def sum2succ(n):
%o A180138   if n <= 5: return n == 5
%o A180138   return not isprime(n//2) and n == prevprime(n//2) + nextprime(n//2)
%o A180138 def T(b, e):
%o A180138   k, powb = 1, b**e
%o A180138   while not sum2succ(k*powb): k += 1
%o A180138   return k
%o A180138 def atodiag(maxd): # maxd anti-diagonals
%o A180138   return [T(b-e, e) for b in range(2, maxd+2) for e in range(b-1)]
