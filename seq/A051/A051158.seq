%o A051158 (PARI) /* divisionless routine from fxtbook */
%o A051158 s2(y, N=7)=
%o A051158 { local(in, y2, A); /* as powerseries correct to order = 2^N-1 */
%o A051158     in = 1; /* 1+y+y^2+y^3+...+y^(2^k-1) */
%o A051158     A = y; for(k=2, N, in *= (1+y); y *= y; A += y*(in + A); );
%o A051158     return( A ); }
