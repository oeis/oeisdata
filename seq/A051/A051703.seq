%t A051703 nmax = 48; Do[a[n]=0, {n, 1, nmax}]; km = PrimePi[nmax]; For[k=1, k <= km, k++, q = 1; p = Prime[k]; For[i=nmax, i >= 1, i--, q=1; While[q*p <= i, q *= p; If[i == q, m = q, If[a[i - q] != 0, m = q*a[i - q], m = 0]]; a[i] = Max[a[i], m]]]]; a[0] = 1; Table[a[n], {n, 0, nmax}] (* _Jean-FranÃ§ois Alcover_, Aug 02 2012, translated from _Robert Gerbicz_'s Pari program *)
