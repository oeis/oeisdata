%t A029561 qcm[n_, d_] := Block[{p, e}, {p, e} = Transpose@FactorInteger@n; Length[p] > 1 && Max[e] == 1 && ! MemberQ[p, d] && Max@ Mod[n-d, p-d] == 0]; Select[Range[10^5],  qcm[#, 2] &] (* _Giovanni Resta_, May 21 2013 *)
