%o A053631 a[n]:=a[n-1] + (a[n-1]^2)/2$
%o A053631 A053631(n):=a[n]$
%o A053631 makelist(A053631(n),n,1,10); /* _Martin Ettl_, Nov 08 2012 */
%o A053631 (PARI) main(size)={v=vector(size); v[1]=2;for(n=2,size,v[n]=v[n-1]+v[n-1]^2/2);return(v)} /* _Anders Hellstr√∂m_, Jul 08 2015 */
