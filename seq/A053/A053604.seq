%t A053604 nmax = 100; m0 = 10; A053604 :=
%t A053604 Table[a[n], {n, 0, nmax}]; Clear[counts];
%t A053604 counts[m_] :=
%t A053604 counts[m] = (Clear[a]; a[_] = 0;
%t A053604    Do[s = i*(i + 1)/2 + j*(j + 1)/2 + k*(k + 1)/2;
%t A053604     a[s] = a[s] + 1, {i, 1, m}, {j, 1, m}, {k, 1, m}];
