%o A053657 S(n, p) = {
%o A053657      my(acc = 0, tmp = p-1);
%o A053657      while (tmp < n, acc += floor((n-1)/tmp); tmp *= p);
%o A053657      return(acc);
%o A053657 };
%o A053657 a(n) = {
%o A053657      my(rv = 1);
%o A053657      forprime(p = 2, n, rv *= p^S(n,p));
%o A053657      return(rv);
%o A053657 };
