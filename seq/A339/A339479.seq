%o A339479 from functools import cache
%o A339479 @cache
%o A339479 def r339479(n, k):
%o A339479     if n == 0:
%o A339479         return 1
%o A339479     elif k == 0:
%o A339479         return r339479(n - 1, 1)
%o A339479     else:
%o A339479         return r339479(n - 1, k + 1) + r339479(n, k // 2)
%o A339479 def a339479(n): return r339479(n,0)
