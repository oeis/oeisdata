%t A082986 a[n_] := Module[{f, d, t, x = 0}, For[z = n+1, z <= Quotient[201*n, 100], z++, f = 1/n - 1/z; d = Denominator[f]; Do[t = (y/d + 1/y)/f; If[Denominator[t] == 1, x = Max[x, t*y]], {y, Divisors[d]}]]; x]; Table[a[n], {n, 1, 36}] (* _Jean-FranÃ§ois Alcover_, Jul 10 2017, after _Charles R Greathouse IV_ *)
