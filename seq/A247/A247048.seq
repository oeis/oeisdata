%o A247048         if isprime(m):
%o A247048             m2 = sum(p*e for p,e in factorint(n+2).items())
%o A247048             if ((m2 == m+2) or (m == m2+2)) and isprime(m2):
%o A247048                 A247048_list.append(n)
