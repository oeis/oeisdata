%o A247190 (Python)
%o A247190 from sympy import prime
%o A247190 def A247190(n):
%o A247190     p, f, fv = prime(n), 1, {}
%o A247190     for i in range(2,p):
%o A247190         f = (f*i) % p
%o A247190         if f in fv:
%o A247190             return fv[f]
%o A247190         else:
%o A247190             fv[f] = i
%o A247190     else:
%o A247190         return 0 # _Chai Wah Wu_, Nov 25 2014
