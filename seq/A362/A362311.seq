%e A362311     n=4: -1,-3,-7,-15,17,9,5,3,2
%e A362311   ...
%o A362311 (PARI) T(n,k) = if(k >= n, 2^n + 2^(k-n), 2^n - 2^(n-k-1));
%o A362311 (MATLAB)
%o A362311 function a = A362311( max_row )
