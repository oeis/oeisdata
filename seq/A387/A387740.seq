%N A387740 Number of partitions of n such that the largest part is >= n/2 and each part is congruent to 2 or 3 (mod 5).
%H A387740 Sean A. Irvine, <a href="/A387740/b387740.txt">Table of n, a(n) for n = 1..1000</a>
%F A387740 a(n) = Sum_{k=ceiling(n/2)..n,k={2,3}(mod 5)} B(n-k,k) where B(0,k)=1, B(n,k)=0 if n<0 or k<=0, B(n,k) = B(n,k-1) + B(n-k,k) if k = 2 or 3 (mod 5), otherwise B(n,k) = B(n,k-1).
%e A387740 a(10)=2 because of the partitions 8+2 and 7+3.
%t A387740 a[n_]:=Module[{p,w,T,r,w2},p=Select[Range[n],Mod[#,5]==2||Mod[#,5]==3&];
%t A387740 w=Table[0,n+1];w[[1]]=1;
%t A387740 Do[If[s>=t,w[[s+1]]+=w[[s-t+1]]],{t,p},{s,0,n}];
%t A387740 T=Floor[(n-1)/2];
%t A387740 r=Select[p,#<=T&];
%t A387740 w2=Table[0,n+1];w2[[1]]=1;
%t A387740 Do[If[s>=t,w2[[s+1]]+=w2[[s-t+1]]],{t,r},{s,0,n}];
%t A387740 w[[n+1]]-w2[[n+1]]]
%t A387740 Table[a[n],{n,1,100}] (* _Vincenzo Librandi_, Nov 30 2025 *)
%o A387740 (Magma) function a(n)
%o A387740     p := [k : k in [1..n] | (k mod 5) in {2,3}];
%o A387740     w := [0 : i in [0..n]]; w[1] := 1;
%o A387740     for t in p do
%o A387740         for s in [t..n] do
%o A387740             w[s+1] +:= w[s-t+1];
%o A387740         end for;
%o A387740     end for;
%o A387740     T := (n-1) div 2;
%o A387740     r := [k : k in p | k le T];
%o A387740     w2 := [0 : i in [0..n]]; w2[1] := 1;
%o A387740     for t in r do
%o A387740         for s in [t..n] do
%o A387740             w2[s+1] +:= w2[s-t+1];
%o A387740         end for;
%o A387740     end for;
%o A387740     return w[n+1] - w2[n+1];
%o A387740 end function;
%o A387740 seq := [ a(n) : n in [1..100] ];
%o A387740 print seq; // _Vincenzo Librandi_, Nov 30 2025
