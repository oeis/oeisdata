%N A387739 Number of partitions of n such that the largest part is >= n/2 and each part is congruent to 1 or 4 (mod 5).
%H A387739 Sean A. Irvine, <a href="/A387739/b387739.txt">Table of n, a(n) for n = 1..1000</a>
%F A387739 a(n) = Sum_{k=ceiling(n/2)..n,k={1,4}(mod 5)} B(n-k,k) where B(0,k)=1, B(n,k)=0 if n<0 or k<=0, B(n,k) = B(n,k-1) + B(n-k,k) if k = 1 or 4 (mod 5), otherwise B(n,k) = B(n,k-1).
%e A387739 a(6)=2 because of the partitions 6 and 4+1+1.
%t A387739 a[n_]:=Module[{p,w,T,r,w2},p=Select[Range[n],Mod[#,5]==1||Mod[#,5]==4&];
%t A387739 w=Table[0,n+1];w[[1]]=1;
%t A387739 Do[If[s>=t,w[[s+1]]+=w[[s-t+1]]],{t,p},{s,0,n}];
%t A387739 T=Floor[(n-1)/2];
%t A387739 r=Select[p,#<=T&];
%t A387739 w2=Table[0,n+1];w2[[1]]=1;
%t A387739 Do[If[s>=t,w2[[s+1]]+=w2[[s-t+1]]],{t,r},{s,0,n}];
%t A387739 w[[n+1]]-w2[[n+1]]]
%t A387739 Table[a[n],{n,1,100}] (* _Vincenzo Librandi_, Dec 01 2025 *)
%o A387739 (Magma) function a(n)
%o A387739     p := [k : k in [1..n] | (k mod 5) in {1,4}];
%o A387739     w := [0 : i in [0..n]]; w[1] := 1;
%o A387739     for t in p do
%o A387739         for s in [t..n] do
%o A387739             w[s+1] +:= w[s-t+1];
%o A387739         end for;
%o A387739     end for;
%o A387739     T := (n-1) div 2;
%o A387739     r := [k : k in p | k le T];
%o A387739     w2 := [0 : i in [0..n]]; w2[1] := 1;
%o A387739     for t in r do
%o A387739         for s in [t..n] do
%o A387739             w2[s+1] +:= w2[s-t+1];
%o A387739         end for;
%o A387739     end for;
%o A387739     return w[n+1] - w2[n+1];
%o A387739 end function;
%o A387739 seq := [ a(n) : n in [1..100] ];
%o A387739 print seq; // _Vincenzo Librandi_, Dec 01 2025
