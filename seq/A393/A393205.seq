%N A393205 Primes p such that there is at least one Pythagorean triple with perimeter s and inradius r such that s + r^2 = p^2.
%H A393205 Robert Israel, <a href="/A393205/a393205.txt">Data for the first 58 terms</a>
%e A393205 a(3) = 41 is a term because 41 is prime and the Pythagorean triple (95, 168, 193) has perimeter 95 + 168 + 193 = 456 and inradius (95 + 168 - 193)/2 = 35 and 456 + 35^2 = 41^2.
%p A393205 N:= 10^14: # for terms <= sqrt(N)
%p A393205 Res:= NULL:
%p A393205 for x from 2 by 2 while 2*x^2 <= N do
%p A393205   ym:= select(t -> t >= 1 and t <= x-1, [fsolve(2*x^2*yy - 6*x*yy^2 + 4*yy^3 + 2*x = 0)]);
%p A393205   if ym = [] then ym:= x-1 else ym:= op(ym) fi;
%p A393205   for y from 1 to ym by 2 do
%p A393205     if igcd(x,y) > 1 then next fi;
%p A393205     p:= 2*x*(x+y);
%p A393205     r:= (x-y)*y;
%p A393205     v:= p+r^2;
%p A393205     if v > N then break fi;
%p A393205     if issqr(v) and isprime(sqrt(v)) then Res:= Res,sqrt(v); fi
%p A393205   od;
%p A393205   for y from x-1 to ym by -2 do
%p A393205         if igcd(x,y) > 1 then next fi;
%p A393205     p:= 2*x*(x+y);
%p A393205     r:= (x-y)*y;
%p A393205     v:= p+r^2;
%p A393205     if v > N then break fi;
%p A393205     if issqr(v) and isprime(sqrt(v)) then Res:= Res,sqrt(v); fi
%p A393205     fi
%p A393205   od;
%p A393205 od:
%p A393205 sort([Res]);
