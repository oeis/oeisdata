%t A070168 f[n_] := If[EvenQ[n], n/2, (3 n + 1)/2];
%t A070168 Table[NestWhileList[f, n, # != 1 &], {n, 1, 30}] // Grid (* _Geoffrey Critzer_, Oct 18 2014 *)
