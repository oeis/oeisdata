%o A070168 a070168 n k = a070168_tabf !! (n-1) !! (k-1)
%o A070168 a070168_tabf = map a070168_row [1..]
%o A070168 a070168_row n = (takeWhile (/= 1) $ iterate a014682 n) ++ [1]
%o A070168 a070168_list = concat a070168_tabf
