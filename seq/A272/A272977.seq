%e A272977 a(1) = 2 since 1 = 1^2 + 0^2 + 0^2 + 1^2 with 1 > 0 and 3*1^2*0 + 0^2*1 = 0^2, and also 1 = 1^2 + 0^2 + 0^2 + (-1)^2 with 1 > 0 and 3*1^2*0 + 0^2*(-1) = 0^2.
%e A272977 a(3) = 1 since 3 = 1^2 + 0^2 + 1^2 + 1^2 with 1 = 1 and 3*1^2*0 + 1^2*1 = 1^2.
%e A272977 a(6) = 1 since 6 = 2^2 + 0^2 + 1^2 + 1^2 with 2 > 1 and 3*2^2*0 + 1^2*1 = 1^2.
%e A272977 a(7) = 1 since 7 = 1^2 + 1^2 + 1^2 + (-2)^2 with 1 = 1 and 3*1^2*1 + 1^2*(-2) = 1^2.
%e A272977 a(12) = 1 since 12 = 1^2 + 1^2 + 1^2 + (-3)^2 with 1 = 1 and 3*1^2*1 + 1*(-3) = 0^2.
%e A272977 a(23) = 1 since 23 = 3^2 + 1^2 + 3^2 + (-2)^2 with 3 = 3 and 3*3^2*1 + 3^2*(-2) = 3^2.
%e A272977 a(24) = 1 since 24 = 2^2 + 0^2 + 2^2 + 4^2 with 2 = 2 and 3*2^2*0 + 2^2*4 = 4^2.
%e A272977 a(44) = 1 since 44 = 3^2 + 5^2 + 3^2 + 1^2 with 3 = 3 and 3*3^2*5 + 3^2*1 = 12^2.
%e A272977 a(47) = 1 since 47 = 3^2 + 2^2 + 3^2 + (-5)^2 with 3 = 3 and 3*3^2*2 + 3^2*(-5) = 3^2.
%e A272977 a(56) = 1 since 56 = 6^2 + 0^2 + 2^2 + 4^2 with 6 > 2 and 3*6^2*0 + 2^2*4 = 4^2.
%e A272977 a(71) = 1 since 71 = 5^2 + 6^2 + 3^2 + (-1)^2 with 5 > 3 and 3*5^2*6 + 3^2*(-1) = 21^2.
%e A272977 a(140) = 1 since 140 = 5^2 + 3^2 + 5^2 + (-9)^2 with 5 = 5 and 3*5^2*3 + 5^2*(-9) = 0^2.
%e A272977 a(147) = 1 since 147 = 11^2 + 0^2 + 5^2 + 1^2 with 11 > 5 and 3*11^2*0 + 5^2*1 = 5^2.
%e A272977 a(156) = 1 since 156 = 7^2 + 3^2 + 7^2 + 7^2 with 7 = 7 and 3*7^2*3 + 7^2*7 = 28^2.
%e A272977 a(174) = 1 since 174 = 13^2 + 0^2 + 2^2 + 1^2 with 13 > 2 and 3*13^2*0 + 2^2*1 = 2^2.
%e A272977 a(199) = 1 since 199 = 9^2 + 1^2 + 9^2 + 6^2 with 9 = 9 and 3*9^2*1 + 9^2*6 = 27^2.
%e A272977 a(204) = 1 since 204 = 1^2 + 9^2 + 1^2 + (-11)^2 with 1 = 1 and 3*1^2*9 + 1^2*(-11) = 4^2.
%e A272977 a(263) = 1 since 263 = 3^2 + 14^2 + 3^2 + 7^2 with 3 = 3 and
%e A272977 3*3^2*14 + 3^2*7 = 21^2.
%e A272977 a(284) = 1 since 284 = 13^2 + 3^2 + 5^2 + (-9)^2 with 13 > 5 and 3*13^2*3 + 5^2*(-9) = 36^2.
%e A272977 a(439) = 1 since 439 = 13^2 + 5^2 + 7^2 + (-14)^2 with 13 > 7 and 3*13^2*5 + 7^2*(-14) = 43^2.
%e A272977 a(4652) = 1 since 4652 = 11^2 + 21^2 + 11^2 + (-63)^2 with 11 = 11 and 3*11^2*21 + 11^2*(-63) = 0^2.
%t A272977 SQ[n_]:=SQ[n]=IntegerQ[Sqrt[n]]
%t A272977 Do[r=0; Do[If[SQ[n-x^2-y^2-z^2]&&SQ[3x^2*y+z^2*(-1)^k*Sqrt[n-x^2-y^2-z^2]],r=r+1], {z,0,Sqrt[(n-1)/2]},{x,z,Sqrt[n-1-z^2]},{y,0,Sqrt[n-1-x^2-z^2]},{k,0,1}];Print[n, " ",r]; Continue, {n,1,80}]
