%p A140944 A140944 := proc(d,n) if d = 0 then A001045(n) ; else procname(d-1,n+1)-procname(d-1,n) ; fi; end:
%p A140944 seq(seq(A140944(d,n),n=0..d),d=0..10) ; # _R. J. Mathar_, Sep 07 2009
