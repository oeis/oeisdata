%e A154723                              1
%e A154723                           1,    3
%e A154723                        1,          5
%e A154723                     1,    3,    5,    7
%e A154723                        3,          7,
%e A154723               1,          5,    7,         11
%e A154723            1,    3,                     11,   13
%e A154723               3,    5,               11,   13,
%e A154723      1,          5,    7,         11,   13,         17
