%o A060821 (Python)
%o A060821 def Trow(n: int) -> list[int]:
%o A060821     row: list[int] = [0] * (n + 1); row[n] = 2**n
%o A060821     for k in range(n - 2, -1, -2):
%o A060821         row[k] = -(row[k + 2] * (k + 2) * (k + 1)) // (2 * (n - k))
%o A060821     return row  # _Peter Luschny_, Jan 08 2023
