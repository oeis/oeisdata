%o A007540 (Python)
%o A007540 from sympy import prime
%o A007540 A007540_list = []
%o A007540 for n in range(1,10**4):
%o A007540     p, m = prime(n), 1
%o A007540     p2 = p*p
%o A007540     for i in range(2,p):
%o A007540         m = (m*i) % p2
%o A007540     if m == p2-1:
%o A007540         A007540_list.append(p) # _Chai Wah Wu_, Dec 04 2014
