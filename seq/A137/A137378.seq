%p A137378 BellMatrix(n -> `if`(n::odd,0,(-1)^(1+n/2)*(n+1)/(n/2+1)*(n!/(n/2)!)^2), 9); # _Peter Luschny_, Jan 27 2016
%p A137378 A137378 := proc(n,k)
%p A137378     local m ;
%p A137378     if n =0 and k =0 then
%p A137378         1;
%p A137378     elif type(n+k,'odd') then
%p A137378         0;
%p A137378     else
%p A137378         m := (n+k)/2 ;
%p A137378         (-1)^m*k*binomial(n-1,m-1)/m/k! ;
%p A137378         %*n! ;
%p A137378     end if;
%p A137378 end proc: # _R. J. Mathar_, Nov 17 2018
