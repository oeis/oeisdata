%t A000303 b[u_, o_, t_, k_] := b[u, o, t, k] = If[t == k, (u + o)!, If[Max[t, u] + o < k, 0, Sum[b[u + j - 1, o - j, t + 1, k], {j, 1, o}] + Sum[b[u - j, o + j - 1, 1, k], {j, 1, u}]]];
%t A000303 T[n_, k_] := b[0, n, 0, k] - b[0, n, 0, k + 1];
%t A000303 a[n_] := T[n, 2];
