%N A392680 Primes which can be written as 2^a + p^b where a > 1, p is an odd prime and b > 1 is odd.
%C A392680 a(30) = 16811 and a(31) = 16823 are consecutive primes which both can be written using 7^5 as a summand.
%e A392680 31 = 2^2 + 3^3.
%e A392680 16811 = 2^2 + 7^5.
%p A392680 N:= 10^5: # for terms <= N
%p A392680 R:= {}:
%p A392680 for a from 2 while 2^a < N do
%p A392680   p:= 2:
%p A392680   do
%p A392680     p:= nextprime(p);
%p A392680     if 2^a + p^3 > N then break fi;
%p A392680     for b from 3 by 2 do
%p A392680       c:= 2^a + p^b;
%p A392680       if c > N then break fi;
%p A392680       if isprime(c) then
%p A392680         R:= R union {c} fi;
%p A392680 od od od:
%p A392680 sort(convert(R,list)); # _Robert Israel_, Jan 20 2026
