%o A392038 (Python)
%o A392038 from itertools import product
%o A392038 def a(n):
%o A392038     if n == 0:
%o A392038         return 2  # 1^0 - 2^0 = 0
%o A392038     def mitm(n, k):
%o A392038         u = [i**n for i in range(1, k+1)]
%o A392038         m = k//2
%o A392038         A, B = u[:m], u[m:]
%o A392038         SA = {}
%o A392038         for sgn in product((1,-1), repeat=len(A)):
%o A392038             SA[sum(sgn[i]*A[i] for i in range(len(A)))] = True
%o A392038         for sgn in product((1,-1), repeat=len(B)):
%o A392038             if n - sum(sgn[i]*B[i] for i in range(len(B))) in SA:
%o A392038                 return True
%o A392038         return False
%o A392038     k = 1
%o A392038     while not mitm(n, k):
%o A392038         k += 1
%o A392038     return k
%o A392038 print([a(n) for n in range(9)])
