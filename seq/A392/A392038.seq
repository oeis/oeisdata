%o A392038 @cache
%o A392038 def b(nn, n, i):
%o A392038     m = sum(j**nn for j in range(1, i+1))
%o A392038     return n <= m and (n==m or b(nn, n+i**nn, i-1) or b(nn, abs(n-i**nn), i-1))
%o A392038 def a(n): return next(k for k in count(1) if b(n, n, k))
