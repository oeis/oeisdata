%o A104246 (PARI)
%o A104246 seq(N) = {
%o A104246   my(a = vector(N, k, 8), T = k->(k*(k+1)*(k+2))\6);
%o A104246   for (n = 1, N,
%o A104246     my (k1 = sqrtnint((6*n)\8, 3), k2 = sqrtnint(6*n, 3));
%o A104246     while(n < T(k2), k2--); if (n == T(k2), a[n] = 1; next());
%o A104246     for (k = k1, k2, a[n] = min(a[n], a[n - T(k)] + 1))); a;
%o A104246 };
