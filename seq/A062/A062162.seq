%o A062162 (SageMath) # Generalized algorithm of L. Seidel (1877)
%o A062162 def A062162_list(n) :
%o A062162     R = []; A = {-1:0, 0:0}
%o A062162     k = 0; e = 1
%o A062162     for i in range(n) :
%o A062162         Am = (-1)^i
%o A062162         A[k + e] = 0
%o A062162         e = -e
%o A062162         for j in (0..i) :
%o A062162             Am += A[k]
%o A062162             A[k] = Am
%o A062162             k += e
%o A062162         R.append(A[e*i//2])
%o A062162     return R
%o A062162 A062162_list(22) # _Peter Luschny_, Jun 02 2012
