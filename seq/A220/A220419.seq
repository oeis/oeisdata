%t A220419 a[n_]:=a[n]=Sum[If[PrimeQ[2k+1]==True&&PrimeQ[2(n-k)-1]==True&&PrimeQ[k^3+2(n-k)^3]==True,1,0],{k,1,n-1}]
%t A220419 Do[Print[n," ",a[n]],{n,1,1000}]
