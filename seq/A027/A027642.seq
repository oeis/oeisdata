%o A027642 (SageMath)
%o A027642 def A027642_list(len):
%o A027642     f, R, C = 1, [1], [1]+[0]*(len-1)
%o A027642     for n in (1..len-1):
%o A027642         f *= n
%o A027642         for k in range(n, 0, -1):
%o A027642             C[k] = C[k-1] / (k+1)
%o A027642         C[0] = -sum(C[k] for k in (1..n))
%o A027642         R.append((C[0]*f).denominator())
%o A027642     return R
