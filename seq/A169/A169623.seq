%p A169623 T:=proc(n,k) option remember;
%p A169623 if n >= 0 and k = 0 then 1
%p A169623 elif n >= 0 and k = n then 1
%p A169623 elif (k < 0 or k > n) then 0
%p A169623 else T(n-2,k-2)+T(n-2,k-1)+T(n-2,k);
%p A169623 fi;
%p A169623 end;
