%o A245800 (Python)
%o A245800 def a(n):
%o A245800   if n == 1:
%o A245800     return 1
%o A245800   tot,c,k = 0,0,0
%o A245800   for x in range(1,10**7):
%o A245800     tot += 1/x
%o A245800     if tot >= 0.5:
%o A245800       k += 1
%o A245800       tot = 0
%o A245800     if k == n-1:
%o A245800       c += 1
%o A245800     if k == n:
%o A245800       return c
%o A245800 n = 1
%o A245800 while n < 100:
%o A245800   print(a(n),end=', ')
%o A245800   n += 1
