%t A259697 a11971[n_, k_] := Sum[Binomial[k, i]*BellB[n - k + i], {i, 0, k}];
%t A259697 T[_, 0] = 1; T[n_, k_] := Sum[a11971[i - 1, k - 1], {i, k, n}];
