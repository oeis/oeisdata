%F A282297 Conjecture: a(n) = A279721(n) for n>=2. - _R. J. Mathar_, Jun 21 2025
%t A282297 CAStep[rule_, a_] := Map[rule[[10 - #]] &, ListConvolve[{{0, 2, 0},{2, 1, 2}, {0, 2, 0}}, a, 2],{2}];
%t A282297 code = 451; stages = 128;
%t A282297 rule = IntegerDigits[code, 2, 10];
%t A282297 g = 2 * stages + 1; (* Maximum size of grid *)
%t A282297 a = PadLeft[{{1}}, {g, g}, 0,Floor[{g, g}/2]]; (* Initial ON cell on grid *)
%t A282297 ca = a;
%t A282297 ca = Table[ca = CAStep[rule, ca], {n, 1, stages + 1}];
%t A282297 PrependTo[ca, a];
%t A282297 (* Trim full grid to reflect growth by one cell at each stage *)
%t A282297 k = (Length[ca[[1]]] + 1)/2;
%t A282297 ca = Table[Table[Part[ca[[n]] [[j]],Range[k + 1 - n, k - 1 + n]], {j, k + 1 - n, k - 1 + n}], {n, 1, k}];
%t A282297 Table[FromDigits[Part[ca[[i]] [[i]], Range[i, 2 * i - 1]], 10], {i, 1, stages - 1}]
