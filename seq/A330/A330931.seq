%o A330931 (Python)
%o A330931 def sbd(n): return sum(map(int, str(bin(n)[2:])))
%o A330931 def niv2(n): return n%sbd(n) == 0
%o A330931 def aupto(nn): return [k for k in range(1, nn+1) if niv2(k) and niv2(k+1)]
