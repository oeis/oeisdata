%p A078719 seq(a(n), n=1..94);  # _Alois P. Heinz_, Jan 17 2025
%t A078719 f[n_] := Module[{a, i, o}, i = n; o = 1; a = {}; While[i > 1, If[Mod[i, 2] == 1, o = o + 1]; a = Append[a, i]; i = f[i]]; o]; Table[f[i], {i, 1, 100}]
