%e A124971 a(1) = 17 because 17 = 3^2+2^2+2^2 = 4^2+1^2+0^2 and a(1)+1 = 18 = 3^2+3^2+0^2 = 4^2+1^2+1^2.
%t A124971 Select[Range[200], Length@PowersRepresentations[#, 3, 2] > 1 && Length@PowersRepresentations[# + 1, 3, 2] > 1 &] (* _Ray Chandler_, Oct 31 2019 *)
%o A124971 (PARI)
%o A124971 isCnt3sqr(n)={ local(cnt=0,z2) ; for(x=0,sqrtint(n), for(y=x,sqrtint(n-x^2), z2=n-x^2-y^2 ; if( z2>=y^2 && issquare(z2), cnt++ ; ) ; if(cnt >=2, return(1) ) ; ) ; ) ; return(0) ; }
%o A124971 isA124971(n)= { return( isCnt3sqr(n) && isCnt3sqr(n+1)) ; }
%o A124971 { for(n=1,200, if( isA124971(n), print1(n,", ") ; ) ; ) ; } \\ _R. J. Mathar_, Nov 29 2006
