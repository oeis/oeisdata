%o A003022 (Python)
%o A003022 from itertools import combinations, combinations_with_replacement, count
%o A003022 def a(n):
%o A003022     for k in count(n-1):
%o A003022         for c in combinations(range(k), n-1):
%o A003022             c = c + (k, )
%o A003022             ss = set()
%o A003022             for s in combinations_with_replacement(c, 2):
%o A003022                 if sum(s) in ss: break
%o A003022                 else: ss.add(sum(s))
%o A003022             if len(ss) == n*(n+1)//2: return k # _Jianing Song_, Feb 14 2025, adapted from the python program of A345731
