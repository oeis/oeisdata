%o A003149 (Python)
%o A003149 def a(n: int) -> int:
%o A003149     if n < 2: return n + 1
%o A003149     app, ap = 1, 2
%o A003149     for i in range(2, n + 1):
%o A003149         app, ap = ap, ((3 * i + 1) * ap - (i * i) * app) >> 1
%o A003149     return ap
%o A003149 print([a(n) for n in range(23)])  # _Peter Luschny_, Aug 08 2025
