%o A389533 (Python) # see linked programs to generate larger terms
%o A389533 from sympy.ntheory import digits
%o A389533 from itertools import permutations
%o A389533 def to_digits(k, base): return tuple(digits(k, base)[1:])
%o A389533 def from_digits(t, base): return sum(ti*base**i for i, ti in enumerate(t[::-1]))
%o A389533 def ok(t1, t2, base): return base == len(t1+t2) == len(set(t1+t2))
%o A389533 def a(n):
%o A389533     first = list(range(n//2, n)) if n&1 else list(range(n//2))
%o A389533     return next((k for f in first[::-1] for p in permutations(sorted(set(range(n))-{f})[::-1], n//2-1) if ok((f,)+p, to_digits(2*(k:=from_digits((f,)+p, n)), n), n)), 0)
%o A389533 print([a(n) for n in range(2, 14)]) # _Michael S. Branicky_, Oct 10 2025
