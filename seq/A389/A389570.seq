%t A389570 (*Prints T(n,k) as triangle*)
%t A389570 T1[t_, n_, k_] := Sum[(-1)^j*Binomial[k, j]*(t - j)^n, {j, 0, k}];Table[T1[1, n, k], {n, 0, 10}, {k, 0, n}] // Flatten
%t A389570 (*Validates T(n,k) in Stirling form*)
%t A389570 T2[t_, n_, k_] := Sum[Binomial[t - k, j - k]*StirlingS2[n, j]*j!, {j, k, n}];Table[T2[1, n, k], {n, 0, 10}, {k, 0, n}] // Flatten
%t A389570 (*Validates T(n,k) in Eulerian form*)
%t A389570 Eulerian[n_, k_] := Sum[(-1)^s*Binomial[n + 1, s]*(k + 1 - s)^n, {s, 0, k}];
%t A389570 T3[t_, n_, k_] := Sum[Eulerian[n, j]*Binomial[t + j - k, n - k], {j, 0, n}];Table[T3[1, n, k], {n, 0, 10}, {k, 0, n}] // Flatten
