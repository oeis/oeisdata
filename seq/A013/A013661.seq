%o A013661 (Python)  # Use some guard digits when computing.
%o A013661 # BBP formula (3 / 16) P(2, 64, 6, (16, -24, -8, -6,  1, 0)).
%o A013661 from decimal import Decimal as dec, getcontext
%o A013661 def BBPzeta2(n: int) -> dec:
%o A013661     getcontext().prec = n
%o A013661     s = dec(0); f = dec(1); g = dec(64)
%o A013661     for k in range(int(n * 0.5536546824812272) + 1):
%o A013661         sixk = dec(6 * k)
%o A013661         s += f * ( dec(16) / (sixk + 1) ** 2 - dec(24) / (sixk + 2) ** 2
%o A013661                  - dec(8)  / (sixk + 3) ** 2 - dec(6)  / (sixk + 4) ** 2
%o A013661                  + dec(1)  / (sixk + 5) ** 2 )
%o A013661         f /= g
%o A013661     return (s * dec(3)) / dec(16)
%o A013661 print(BBPzeta2(2000))  # _Peter Luschny_, Nov 01 2023
