%o A364247                 self.spiral[0].insert(0, count)
%o A364247                 count += 1
%o A364247         else:
%o A364247             self.spiral.append([])
%o A364247             for i in range(0, size + 1):
%o A364247                 self.spiral[i].insert(0, count)
