%N A083463 a(n) = smallest number k such that 2^n + k is a palindrome.
%H A083463 Robert Israel, <a href="/A083463/b083463.txt">Table of n, a(n) for n = 0..6613</a>
%F A083463 a(n) = A052036(2^n). - _David Wasserman_, Nov 11 2004
%e A083463 a(9) = 3 as 2^9 = 512, 512 +3 = 515 is a palindrome.
%p A083463 rev:= proc(n) local L,i;
%p A083463   L:= convert(n,base,10);
%p A083463   add(L[-i]*10^(i-1),i=1..nops(L))
%p A083463 end proc:
%p A083463 f:= proc(n) local d,e,x,y;
%p A083463   d:= ilog10(n)+1;
%p A083463   e:= floor(d/2);
%p A083463   x:= floor(n/10^e);
%p A083463   if d::even then
%p A083463     y:= x*10^e + rev(x);
%p A083463     if y >= n then y - n else (x+1)*10^e + rev(x+1) - n fi;
%p A083463    else
%p A083463     y:= x*10^e + rev(floor(x/10));
%p A083463     if y >= n then y - n else (x+1)*10^e + rev(floor((x+1)/10)) - n fi
%p A083463  fi;
%p A083463 end proc:
%p A083463 map(f, [seq(2^n, n=0..50)]); # _Robert Israel_, Feb 17 2026
