%p A083503 A083503 := proc(n)
%p A083503     local a,b ;
%p A083503     if n = 1 then
%p A083503         3 ;
%p A083503     else
%p A083503         for b from 2 do
%p A083503             a := (b^n-1)/n-n ;
%p A083503             if type( a,'integer') then
%p A083503                 return  b;
%p A083503             end if;
%p A083503         end do:
%p A083503     end if;
%p A083503 end proc:
%p A083503 seq(A083503(n),n=1..80) ; # _R. J. Mathar_, Aug 01 2025
%p A083503 # alternative:
%p A083503 f:= proc(n) local X,S;
%p A083503   S:= min(map(t -> subs(t,X), {msolve(X^n = 1, n)} minus {{X=1}}));
%p A083503   if S = infinity then n+1 else S fi
%p A083503 end proc:
