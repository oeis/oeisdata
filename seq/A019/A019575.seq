%p A019575 b:= proc(n, i, k) option remember; `if`(n=0, 1, `if`(i<1, 0,
%p A019575       add(b(n-j, i-1, k)/j!, j=0..min(k, n))))
%p A019575     end:
%p A019575 T:= (n, k)-> n!* (b(n$2, k) -b(n$2, k-1)):
%p A019575 seq(seq(T(n, k), k=1..n), n=1..12);  # _Alois P. Heinz_, Jul 29 2014
%t A019575 f[0, _, b_] := Boole[b == 0]; f[n_, k_, b_] := f[n, k, b] = Sum[ Binomial[b, i]*f[n - 1, k, b - i], {i, 0, Min[k, b]}]; t[n_, k_] := f[n, k, n] - f[n, k - 1, n]; Flatten[ Table[ t[n, k], {n, 1, 9}, {k, 1, n}]] (* _Jean-Fran√ßois Alcover_, Mar 09 2012, after _Robert Gerbicz_ *)
