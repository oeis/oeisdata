%o A019575 f(n,k,b)={ (!n||!b||!k) & return(!b); F[n][k][b] & return(F[n][k][b]);
%o A019575 F[n][k][b]=sum(i=0,min(k,b),binomial(b,i)*f(n-1,k,b-i)) }
%o A019575 T(n,k)=f(n,k,n)-f(n,k-1,n)
