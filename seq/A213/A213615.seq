%p A213615 seq(seq(coeff(denom(bernoulli(i,x))*bernoulli(i,x),x,i-j),j=0..i),i=0..12);
%t A213615 Flatten[Table[p = Reverse[CoefficientList[BernoulliB[n, x], x]]; (LCM @@ Denominator[p])*p, {n, 0, 10}]] (* _T. D. Noe_, Nov 07 2012 *)
